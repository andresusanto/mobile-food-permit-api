{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "target": "es2019",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src/**/*"]
}
